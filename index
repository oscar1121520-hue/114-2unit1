<script>
    const API_URL = "https://script.google.com/macros/s/AKfycbyCBu8VfIfcUeHG7F08J6H552J3Im2vvAH8wT89CxjvT15xOZNVxd-8fY5dwtTx2bofoA/exec";
    let wordBank = [], currentPlayer = "", currentMode = "", score = 0, timeLeft = 360, timer;
    let currentIdx = 0, isHintUsed = false;

    window.onload = async () => {
        try {
            const res = await fetch(API_URL);
            const data = await res.json();
            renderTable('rankA', data.rankA);
            renderTable('rankB', data.rankB);
            renderTable('rankTotal', data.rankTotal);

            const wordRes = await fetch(`${API_URL}?action=getWords`);
            wordBank = await wordRes.json();

            document.getElementById('loading-msg').classList.add('hidden');
            document.getElementById('main-ui').classList.remove('hidden');
        } catch (e) {
            document.getElementById('loading-msg').innerText = "âŒ ç„¡æ³•è®€å–è³‡æ–™ï¼Œè«‹ç¢ºèª Apps Script å·²æ­£ç¢ºéƒ¨ç½²ä¸¦é–‹å•Ÿæ¬Šé™ã€‚";
            console.error(e);
        }
    };

    function renderTable(id, data) {
        const container = document.getElementById(id);
        if(!data || data.length === 0) { container.innerHTML = "<p style='color:#999'>æš«ç„¡æ’å</p>"; return; }
        let html = "<table>";
        data.forEach((r, i) => {
            html += `<tr><td>${i+1}. ${r.name}</td><td align="right"><b>${r.score}</b></td></tr>`;
        });
        container.innerHTML = html + "</table>";
    }

    function startGame(mode) {
        currentPlayer = document.getElementById('user-select').value;
        if (!currentPlayer) { alert("è«‹å…ˆé¸æ“‡ä½ çš„å§“åï¼"); return; }
        
        currentMode = mode; score = 0; timeLeft = 360; currentIdx = 0;
        wordBank.sort(() => Math.random() - 0.5); // éš¨æ©Ÿå‡ºé¡Œ

        document.getElementById('start-screen').classList.add('hidden');
        document.getElementById('game-screen').classList.remove('hidden');
        
        nextQuiz();
        timer = setInterval(() => {
            timeLeft--;
            document.getElementById('timer-display').innerText = timeLeft;
            if(timeLeft <= 0) endGame();
        }, 1000);
    }

    function nextQuiz() {
        if(currentIdx >= wordBank.length) return endGame();
        isHintUsed = false;
        document.getElementById('hint-area').innerText = "";
        document.getElementById('ans-input').value = "";
        document.getElementById('ans-input').focus();
        
        const q = wordBank[currentIdx];
        if(currentMode === 'æ¨¡å¼A') {
            document.getElementById('quiz-box').innerText = q.zh;
            document.getElementById('hint-btn').classList.add('hidden');
        } else {
            document.getElementById('quiz-box').innerHTML = maskWord(q.sentence, q.en);
            document.getElementById('hint-btn').classList.remove('hidden');
        }
        document.getElementById('score-info').innerText = `æŒ‘æˆ°è€…ï¼š${currentPlayer} | ç›®å‰ç´¯ç©å¾—åˆ†ï¼š${score}`;
    }

    function maskWord(sentence, target) {
        // å°‡æ­£ç¢ºç­”æ¡ˆæ‹†è§£ï¼Œä¿ç•™å„å–®å­—é ­å°¾
        const words = target.split(' ');
        const masked = words.map(w => {
            if(w.length <= 1) return "_";
            if(w.length === 2) return w[0] + "_";
            return w[0] + "_".repeat(w.length-2) + w[w.length-1];
        }).join(' ');
        
        // ä¸åˆ†å¤§å°å¯«å°‹æ‰¾ä¸¦å–ä»£
        const regex = new RegExp(target.replace(/[.*+?^${}()|[\]\\]/g, '\\$&'), 'gi');
        return sentence.replace(regex, `<span style="color:var(--primary); font-weight:bold; border-bottom:2px solid var(--primary)">${masked}</span>`);
    }

    function useHint() {
        isHintUsed = true;
        document.getElementById('hint-area').innerText = "ğŸ’¡ ä¸­æ–‡æç¤ºï¼š" + wordBank[currentIdx].zh_hint;
    }

    function checkAnswer() {
        const input = document.getElementById('ans-input').value.trim().toLowerCase();
        const ans = wordBank[currentIdx].en.toLowerCase();
        
        if (input === ans) {
            let gain = isHintUsed ? 5 : 10;
            score += gain;
        } else {
            score = Math.max(0, score - 5);
        }
        currentIdx++;
        nextQuiz();
    }

    async function endGame() {
        clearInterval(timer);
        const timeBonus = timeLeft > 0 ? timeLeft : 0;
        const finalScore = score + timeBonus;
        
        document.getElementById('game-screen').innerHTML = "<h2>ğŸ‰ æŒ‘æˆ°çµæŸï¼æ­£åœ¨åŒæ­¥æˆç¸¾...</h2>";
        
        try {
            await fetch(API_URL, {
                method: "POST",
                mode: "no-cors",
                body: JSON.stringify({ name: currentPlayer, score: finalScore, mode: currentMode })
            });
            alert(`æŒ‘æˆ°å®Œæˆï¼\nç­”é¡Œç©åˆ†ï¼š${score}\næ™‚é–“ç´…åˆ©ï¼š${timeBonus}\næœ€çµ‚ç¸½åˆ†ï¼š${finalScore}`);
        } catch (e) {
            alert("æˆç¸¾å­˜æª”æ™‚ç™¼ç”ŸéŒ¯èª¤ï¼Œä½†åˆ¥æ“”å¿ƒï¼Œå¯ä»¥æˆªåœ–çµ¦è€å¸«ï¼");
        }
        location.reload();
    }

    document.getElementById('ans-input').addEventListener('keypress', e => { if(e.key === 'Enter') checkAnswer(); });
</script>
</body>
