        #quiz-box { background: #f1f3f5; padding: 40px 20px; border-radius: 15px; font-size: 1.6rem; margin-bottom: 20px; min-height: 100px; display: flex; align-items: center; justify-content: center; line-height: 1.4; word-break: break-word; }
        input[type="text"] { width: 85%; padding: 15px; font-size: 1.4rem; border: 2px solid #ddd; border-radius: 10px; text-align: center; outline: none; transition: 0.2s; }
