        .btn-mode h2 { margin: 0 0 10px 0; color: var(--primary); }
        
        /* æ’è¡Œæ¦œ */
        .rank-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; margin-top: 25px; }
